public void update(Pet dataToUpdate) {
						
			
			PreparedStatement stmt = null;
						
			try (Connection conn = connUtil.getConnection()) {
				//connection = ConnectionUtil.getConnection();
				
				String sql = "insert into pet where id = "+dataToUpdate.getId()+" (name,species,description,age,status) "
					+ "values (?, ?, ?, ?, ?)";

				pStmt = conn.prepareStatement(sql);
				
				//pStmt.setInt(1,dataToUpdate.getId());
				pStmt.setString(1, dataToUpdate.getName()); 
				pStmt.setString(2, dataToUpdate.getSpecies());
				pStmt.setString(3, dataToUpdate.getDescription());
				pStmt.setInt(4, dataToUpdate.getAge());
				pStmt.setString(5, dataToUpdate.getStatus());

				
				stmt.executeUpdate();
				
			}catch(SQLException e) {
				e.printStackTrace();
			}finally {
				try {
					if(stmt != null)
						stmt.close();
					
				}catch(SQLException e) {
					e.printStackTrace();
				}
				
			}
			
			
		}
		
		